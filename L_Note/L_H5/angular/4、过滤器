过滤:|
		currency:  	// 格式化数字为货币格式
		filter:    	// 从数组项中选择一个子集
		lowercase: 	// 格式化字符串为小写
		orderBy:   	// 根据某个表达式排列数组
		uppercase: 	// 格式化字符串为大写
		data: 		// 将日期格式化成需要的格式 data:'yyyy-MM-dd'
		json: 		// 可以将一个JSON或JavaScript对象转化为字符串
		limitTo: 	// 截取指定个数的字符
		number: 	// 可以给一个数字加上千位分割。同时接受一个参数用于指定float类型保留几位小数
		
		app.filter: // 自定义过滤器 	
		
		