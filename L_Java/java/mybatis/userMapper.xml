<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pp.learn.mybatis.UserMapper">
	<!-- 查询[依次为方法名、传入的参数类型、返回值类型] -->
	<!-- #{id}中的id标识User中的id -->
	<!-- _parameter myBatis自带的参数  -->
	<select id="findById" resultType="com.pp.learn.mybatis.User">
		select * from User 
		<where>
			<if test="param1 != null"> 
				name = #{0, jdbcType=VARCHAR}
			</if>
			<if test="param2 != null "> 
				AND age = #{1.age, jdbcType=INTEGER}
			</if>			
		</where>
	</select>
</mapper>

